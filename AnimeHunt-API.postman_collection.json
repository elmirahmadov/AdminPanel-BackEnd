    {
      "name": "Auth",
      "item": [
        {
          "name": "Kayıt Ol",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fields\": {\n    \"name\": \"string // Gerekli\",\n    \"email\": \"string // Gerekli\",\n    \"password\": \"string // Gerekli\",\n    \"username\": \"string // Gerekli\",\n    \"birthDate\": \"string // Opsiyonel (YYYY-MM-DD)\",\n    \"gender\": \"string // Opsiyonel (MALE/FEMALE/OTHER)\",\n    \"bio\": \"string // Opsiyonel\"\n  },\n  \"example\": {\n    \"name\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\",\n    \"username\": \"testuser123\",\n    \"birthDate\": \"2000-01-01\",\n    \"gender\": \"MALE\",\n    \"bio\": \"Anime sever\"\n  }\n}"
            }
          }
        },
        {
          "name": "Giriş Yap",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fields\": {\n    \"email\": \"string // Gerekli\",\n    \"password\": \"string // Gerekli\"\n  },\n  \"example\": {\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\"\n  }\n}"
            }
          }
        }
      ]
    },
